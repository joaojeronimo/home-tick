{$TLD} {
  tls self_signed
  proxy / homepage:9090
}

api.{$TLD} {
  tls self_signed
  header / {
    Access-Control-Allow-Origin  https://${TLD}
    Access-Control-Allow-Methods "GET, POST, OPTIONS"
  }
  proxy / api:9999

  log stdout  
  errors stderr
}

dashboard.{$TLD} {
  tls self_signed
  proxy / chronograf:8888
}

write.{$TLD} {
  tls self_signed

  log stdout  
  errors stderr

  basicauth / {$SENSOR_USERNAME} ${SENSOR_PASSWORD}

  proxy /write influxdb:8086
}
